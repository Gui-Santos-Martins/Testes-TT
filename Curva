//Código Imã
//A = Esquerda
//B = Meio
//C = Direita

#define perto 60 //cm
#define motorE OUT_A
#define motorD OUT_C
#define motorM OUT_B
#define sensorE SensorUS(IN_1)
#define sensorD SensorUS(IN_2)

task Curva.1() {
   OnRev(OUT_AB, 100)
}
task Curva.2() {
   OnRev(OUT_C,50)
}
task Curva(Curva.2,Curva.1){
 Start Curva.1 && Curva.2
}
task main(Curva) {
   SetSensorLowspeed(IN_1);
   SetSensorLowspeed(IN_2);
   Wait(3000);
   Start Curva()
   Wait(3000)
   off(OUT_ABC)
}
